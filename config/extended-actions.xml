<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <triggers>
            <keyphrase>open</keyphrase>
            <keyphrase>unlock</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>trapdoor</entityCategory>
            <entityCategory>key</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>key</entityCategory>
        </consumed>
        <produced>
            <entityCategory>cellar</entityCategory>
        </produced>
        <narration>You unlock the door and see steps leading down into a cellar</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>chop</keyphrase>
            <keyphrase>cut</keyphrase>
            <keyphrase>cut down</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>tree</entityCategory>
            <entityCategory>axe</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>tree</entityCategory>
        </consumed>
        <produced>
            <entityCategory>log</entityCategory>
        </produced>
        <narration>You cut down the tree with the axe</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>drink</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>potion</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>potion</entityCategory>
        </consumed>
        <produced>
            <entityCategory>health</entityCategory>
        </produced>
        <narration>You drink the potion and your health improves</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>fight</keyphrase>
            <keyphrase>hit</keyphrase>
            <keyphrase>attack</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>elf</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>health</entityCategory>
        </consumed>
        <produced>
        </produced>
        <narration>You attack the elf, but he fights back and you lose some health</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>pay</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>elf</entityCategory>
            <entityCategory>coin</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>coin</entityCategory>
        </consumed>
        <produced>
            <entityCategory>shovel</entityCategory>
        </produced>
        <narration>You pay the elf your silver coin and he produces a shovel</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>bridge</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>log</entityCategory>
            <entityCategory>river</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>log</entityCategory>
        </consumed>
        <produced>
            <entityCategory>clearing</entityCategory>
        </produced>
        <narration>You bridge the river with the log and can now reach the other side</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>dig</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>ground</entityCategory>
            <entityCategory>shovel</entityCategory>
        </subjects>
        <consumed>
            <entityCategory>ground</entityCategory>
        </consumed>
        <produced>
            <entityCategory>hole</entityCategory>
            <entityCategory>gold</entityCategory>
        </produced>
        <narration>You dig into the soft ground and unearth a pot of gold !!!</narration>
    </action>

    <action>
        <triggers>
            <keyphrase>blow</keyphrase>
        </triggers>
        <subjects>
            <entityCategory>horn</entityCategory>
        </subjects>
        <consumed>
        </consumed>
        <produced>
            <entityCategory>lumberjack</entityCategory>
        </produced>
        <narration>You blow the horn and as if by magic, a lumberjack appears !</narration>
    </action>

</actions>
